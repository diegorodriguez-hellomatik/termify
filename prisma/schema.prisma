generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TerminalStatus {
  STOPPED
  STARTING
  RUNNING
  CRASHED
}

enum TerminalType {
  LOCAL
  SSH
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  passwordHash  String?    @map("password_hash")
  image         String?

  // OAuth fields
  emailVerified DateTime?  @map("email_verified")

  // Relations
  accounts      Account[]
  sessions      Session[]
  terminals     Terminal[]
  auditLogs     AuditLog[]

  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Terminal {
  id            String         @id @default(cuid())
  userId        String         @map("user_id")
  name          String         @default("Terminal")
  status        TerminalStatus @default(STOPPED)
  type          TerminalType   @default(LOCAL)
  cols          Int            @default(120)
  rows          Int            @default(30)
  cwd           String?
  outputBuffer  Bytes?         @map("output_buffer")

  // SSH connection fields
  sshHost       String?        @map("ssh_host")
  sshPort       Int?           @map("ssh_port") @default(22)
  sshUsername   String?        @map("ssh_username")
  sshPassword   String?        @map("ssh_password")      // Encrypted
  sshPrivateKey String?        @map("ssh_private_key")   // Encrypted, @db.Text for long keys

  // Metadata
  lastActiveAt  DateTime?      @map("last_active_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  @@index([userId])
  @@index([status])
  @@map("terminals")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  action    String
  resource  String
  resourceId String? @map("resource_id")
  details   Json?
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
