# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/claude_terminal?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# PTY Configuration
PTY_MAX_INSTANCES=10
PTY_SHELL=/bin/zsh

# Allowed Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000"

# Web Push (VAPID Keys)
# Generate with: npx ts-node scripts/generate-vapid-keys.ts
VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:notifications@termify.app"

# MinIO Storage (for avatar uploads)
MINIO_ENDPOINT=minio.justdiego.com
MINIO_PORT=443
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=termify-avatars
MINIO_USE_SSL=true

# Email (SMTP)
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Termify <your-email@gmail.com>"

# App URL (for email links)
APP_URL=http://localhost:3000
