generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TerminalStatus {
  STOPPED
  STARTING
  RUNNING
  CRASHED
}

enum TerminalType {
  LOCAL
  SSH
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  passwordHash  String?    @map("password_hash")
  image         String?

  // OAuth fields
  emailVerified DateTime?  @map("email_verified")

  // Relations
  accounts      Account[]
  sessions      Session[]
  terminals     Terminal[]
  categories    Category[]
  auditLogs     AuditLog[]
  snippets      Snippet[]
  profiles      TerminalProfile[]
  apiKeys       ApiKey[]

  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Category {
  id            String     @id @default(cuid())
  userId        String     @map("user_id")
  name          String
  color         String     @default("#6366f1")
  icon          String?
  position      Int        @default(0)

  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  terminals     Terminal[]

  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  @@index([userId])
  @@map("categories")
}

model Terminal {
  id            String         @id @default(cuid())
  userId        String         @map("user_id")
  categoryId    String?        @map("category_id")
  name          String         @default("Terminal")
  status        TerminalStatus @default(STOPPED)
  type          TerminalType   @default(LOCAL)
  cols          Int            @default(120)
  rows          Int            @default(30)
  cwd           String?
  outputBuffer  Bytes?         @map("output_buffer")
  position      Int            @default(0)
  isFavorite    Boolean        @default(false) @map("is_favorite")

  // SSH connection fields
  sshHost       String?        @map("ssh_host")
  sshPort       Int?           @map("ssh_port") @default(22)
  sshUsername   String?        @map("ssh_username")
  sshPassword   String?        @map("ssh_password")
  sshPrivateKey String?        @map("ssh_private_key") @db.Text

  // Metadata
  lastActiveAt  DateTime?      @map("last_active_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  category      Category?      @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  @@index([userId])
  @@index([categoryId])
  @@index([status])
  @@map("terminals")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  action    String
  resource  String
  resourceId String? @map("resource_id")
  details   Json?
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

model Snippet {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  name        String
  command     String   @db.Text
  description String?
  category    String?
  tags        String[] @default([])
  isFavorite  Boolean  @default(false) @map("is_favorite")
  usageCount  Int      @default(0) @map("usage_count")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([category])
  @@map("snippets")
}

model TerminalProfile {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  name        String
  icon        String?
  color       String   @default("#6366f1")
  description String?

  // Terminal settings
  cols        Int      @default(120)
  rows        Int      @default(30)
  cwd         String?
  shell       String?
  env         Json?    // Environment variables

  // Startup commands
  initCommands String[] @default([]) @map("init_commands")

  isDefault   Boolean  @default(false) @map("is_default")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("terminal_profiles")
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String    @map("user_id")
  name        String    // User-friendly name for the key
  keyHash     String    @map("key_hash") // Hashed API key (we only store hash)
  keyPrefix   String    @map("key_prefix") // First 8 chars for display "ct_abc12..."

  // Permissions
  permissions String[]  @default(["read", "write"]) // read, write, admin

  // Usage tracking
  lastUsedAt  DateTime? @map("last_used_at")
  usageCount  Int       @default(0) @map("usage_count")

  // Expiration
  expiresAt   DateTime? @map("expires_at")
  revokedAt   DateTime? @map("revoked_at")

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([userId])
  @@index([keyHash])
  @@index([keyPrefix])
  @@map("api_keys")
}
